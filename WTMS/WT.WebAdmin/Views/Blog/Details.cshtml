@model BlogDto
<style>
    .btn-outline-secondary:hover #reset{
        fill:#ffffff;
    }
    .rounded {
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
        width:100%;
        height:319px;
    }
    .bg-label-primary {
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
        padding: 15px 112px;
    }
    .text-container {
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
        border-radius:5px;
        padding:1rem;
        margin:2rem 0px;
    }
</style>
<div class="container-fluid flex-grow-1 container-p-y">

    <div class="card mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-header">Detallar</h5>
           
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6" style="height:fit-content">
                    <label class="form-label">Şəkil</label>
                    <img src="~/@Model.ImageName" height="319" class="rounded mb-3">
                </div>
                <div class="col-sm-6">
                    <div class="row" style="padding-top: 1.9rem !important;">
                        <div class="col-sm-12 mb-4">
                            <a class="btn btn-outline-secondary" asp-controller="Blog" asp-action="Details" asp-route-id="@Model.Id">
                                <svg id="reset" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#8592a3" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z" />
                                    <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z" />
                                </svg>
                                Səhifəni yenilə
                            </a>
                        </div>
                        <div class="mb-4 col-md-6">
                            <label for="organization" class="form-label">Status</label>
                            @if (Model.IsActive == true)
                            {<div><span class="badge bg-label-primary me-1">Active</span></div> }
                            else
                            {<div><span class="badge bg-label-warning me-1">Deactive</span></div>}
                        </div>
                        <div class="mb-4 col-md-6">
                            <label for="firstName" class="form-label">Id</label>
                            <input class="form-control" type="text" id="firstName" disabled value="@Model.Id">
                        </div>
                        <div class="mb-4 col-md-6">
                            <label for="lastName" class="form-label">Başlıq</label>
                            <input class="form-control" type="text" name="lastName" disabled id="lastName" value="@Model.Title">
                        </div>
                        <div class="mb-4 col-md-6">
                            <label for="email" class="form-label">Yaradıldığı tarix</label>
                            <input class="form-control" type="text" id="email" name="email" disabled value="@Model.Created_Date">
                        </div>
                        <div class="mb-4 col-md-6">
                            <label for="organization" class="form-label">Dəyişiklik olunduğu tarix</label>
                            <input type="text" class="form-control" id="organization" disabled value="@(Model.Updated_Date == null ? "Dəyişiklik edilməyib" : Model.Updated_Date)">
                        </div>
                        <div class="mb-4 col-md-6">
                            <label for="organization" class="form-label">Silindiyi tarix</label>
                            <input type="text" class="form-control" id="organization" disabled value="@(Model.Deleted_Date == null ? "Məlumat silinməyib" : Model.Deleted_Date)">
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="text-container">
                        <p disabled >@Model.Text</p>
                    </div>
                </div>
                <div class="mt-2 col-sm-12">
                    <button type="submit" class="btn btn-primary me-2">Save changes</button>
                    <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                </div>
            </div>
               
        </div>
        <!-- /Account -->
    </div>
</div>