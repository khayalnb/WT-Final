<div class="container-fluid flex-grow-1 container-p-y">
    <div class="card">
        <div class="d-flex justify-content-between align-items-center my-1">
            <h5 class="card-header">Kateqoriyalar</h5>
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary padding" id="create"><img src="~/Assets/img/plus-circle-dotted.svg" /> Əlavə et</a>
        </div>

        <div class="card-body">
            <div class="table-responsive text-nowrap">
                @if (Model.Categories.Count != 0)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Kateqoriyanın adı</th>
                                <th>Icon</th>
                                <th>Yaradılma tarixi</th>
                                <th>Düzəliş tarixi</th>
                                <th>Silinmə tarixi</th>
                                <th>Status</th>
                                <th>Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model.Categories)
                                {
                                    string updateDate = item.Updated_Date == null ? "Dəyişiklik edilməyib" : item?.Updated_Date?.ToString("MM/dd/yyyy H:mm");
                                    string deleteDate = item.Deleted_Date == null ? "Dəyişiklik edilməyib" : item?.Deleted_Date?.ToString("MM/dd/yyyy H:mm");

                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td class="image">

                                            @Html.Raw(@item.Icon)
                                        </td>
                                        <td>@item.Created_Date?.ToString("MM/dd/yyyy H:mm")</td>
                                        <td>
                                            <span class="@(updateDate == "Dəyişiklik edilməyib" ? "badge bg-label-success me-1" : "")">@updateDate</span>
                                        </td>
                                        <td>
                                            <span class="@(deleteDate == "Dəyişiklik edilməyib" ? "badge bg-label-success me-1" : "")">@deleteDate</span>
                                        </td>
                                        <td>
                                            @if (item.IsActive.Equals(true))
                                            {
                                                <span class="badge bg-label-success">Aktiv</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-label-warning me-1">Deaktiv</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                    <i class="bx bx-dots-vertical-rounded"></i>
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                                    <a class="dropdown-item" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        Kateqoriya siyahsınız boşdur !
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-12 mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary me-3">Geri qayıt</a>
    </div>
</div>
