@model List<Blog>

<link rel="stylesheet" href="assets/css/blog.css">
<section class="my-3">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="blog-svg-title">Bloqlar.</h2>
                <img class="w-100" src="assets/img/blog/blog_head.svg" alt="">
            </div>
        </div>
        <div class="row mt-4">
            @if (Model is not null)
            {
                @foreach (var blog in Model)
                {
                    string text = blog.Text.Length > 15 ?  blog.Text.Substring(0,10)  : blog.Text;
                    <div class="col-sm-3">
                        <div class="blog-card">
                            <div class="blog-image">
                                <img src="/AdminPanelProjectFolderNameImages/BlogImages/@blog.ImageName" alt="">
                            </div>
                            <div class="blog-body">
                                <div class="blog-date">
                                    <img src="assets/img/blog/hourglass.svg" alt="">
                                    <span>@blog.Created_Date?.ToString("MM/dd/yyyy")</span>
                                </div>
                                <h6>@blog.Title</h6>
                                <p>@text</p>
                                <div class="more-info">
                                    <a asp-action="BlogDetails" asp-route-id="@blog.Id">Daha ətraflı </a>
                                    <img src="assets/img/arrow-right.svg" alt="">
                                </div>

                            </div>

                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-sm-12">
                    <div class="alert alert-warning" role="alert">
                        @ViewBag.Info
                    </div>
                </div>
            }
        </div>
    </div>
</section>