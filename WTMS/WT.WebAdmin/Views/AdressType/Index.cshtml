@model List<AdressType>
@section addCss{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}
<style>
    .dropdown-item:first-child {
        color: green;
    }

    .dropdown-item:nth-child(2) {
        color: dodgerblue;
    }

    .dropdown-item:last-child {
        color: red;
    }

    .dropdown-item {
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

        .dropdown-item i {
            margin-right: 5px;
        }

    .padding {
        margin: 1.5rem 1.5rem;
        font-weight: 100;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .padding img {
            margin-right: 5px;
        }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

    .rounded-circle {
        width: 50px;
        height: 50px;
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
    }

    .image svg {
        width: 25px;
        height: 25px;
    }
</style>
<div class="container-fluid flex-grow-1 container-p-y">
    <div class="card">
        <div class="d-flex justify-content-between align-items-center my-1">

            <h5 class="card-header">Alt kateqoriyalar</h5>
            <a asp-controller="AdressType" asp-action="Create" class="btn btn-primary padding"><img src="~/Assets/img/plus-circle-dotted.svg" /> Əlavə et</a>
        </div>

        <div class="card-body">
            <div class="table-responsive text-nowrap">
                @if (Model.Count != 0)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Xidmət növü</th>
                                <th>Yaradılma tarixi</th>
                                <th>Düzəliş tarixi</th>
                                <th>Silinmə tarixi</th>
                                <th>Status</th>
                                <th>Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    string updateDate = item.Updated_Date == null ? "Dəyişiklik edilməyib" : item?.Updated_Date?.ToString("MM/dd/yyyy H:mm");
                                    string deleteDate = item.Deleted_Date == null ? "Dəyişiklik edilməyib" : item?.Deleted_Date?.ToString("MM/dd/yyyy H:mm");

                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Created_Date?.ToString("MM/dd/yyyy H:mm")</td>
                                        <td>
                                            <span class="@(updateDate == "Dəyişiklik edilməyib" ? "badge bg-label-success me-1" : "")">@updateDate</span>
                                        </td>
                                        <td>
                                            <span class="@(updateDate == "Dəyişiklik edilməyib" ? "badge bg-label-success me-1" : "")">@deleteDate</span>
                                        </td>
                                        <td>
                                            @if (item.IsActive.Equals(true))
                                            {
                                                <span class="badge bg-label-success">Aktiv</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-label-warning me-1">Deaktiv</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                    <i class="bx bx-dots-vertical-rounded"></i>
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" asp-controller="AdressType" asp-action="Edit" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                                    <a class="dropdown-item" asp-controller="AdressType" asp-action="Delete" asp-route-id="@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        Xidmət növləri siyahsınız boşdur !
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-12 mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary me-3">Geri qayıt</a>
    </div>
</div>
