@model List<Product>
<style>
    .dropdown-item:first-child {
        color: green;
    }

    .dropdown-item:nth-child(2) {
        color: dodgerblue;
    }

    .dropdown-item:last-child {
        color: red;
    }

    .dropdown-item {
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

        .dropdown-item i {
            margin-right: 5px;
        }

    .padding {
        margin: 1.5rem 1.5rem;
        font-weight: 100;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .padding img {
            margin-right: 5px;
        }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

    .rounded-circle {
        width: 50px;
        height: 50px;
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
    }
</style>
<div class="container-fluid flex-grow-1 container-p-y">
    <div class="card">
        <div class="d-flex justify-content-between align-items-center my-1">
            <h5 class="card-header">Məhsullar</h5>
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary padding">
                @*<img src="~/Assets/img/plus-circle-dotted.svg" />*@
                <lord-icon src="https://cdn.lordicon.com/mecwbjnp.json"
                           colors="primary:#fff,secondary:#fff"
                           trigger="hover"
                           style="width:25px;height:25px;margin-right:5px;">
                </lord-icon>
                Əlavə et
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive text-nowrap">
                @if (Model is not null)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Brend</th>
                                <th>Model</th>
                                <th>Kateqoriya</th>
                                <th>Qiymət</th>
                                <th>Endirim qiyməti</th>
                                <th>M/Sayı</th>
                                <th>Çatdırılma</th>
                                <th>Kampaniya</th>
                                <th>Status</th>
                                <th>Şəkil</th>
                                <th>Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Brand.Name</td>
                                        <td>@item.Name</td>
                                        <td>@item.SubCategory.Name</td>
                                        <td>@item.Price</td>
                                        <td>@item.DisCount</td>
                                        <td>@item.Count</td>
                                        <td>@item.IsFreeDelivery</td>
                                        <th>@item.OfferCompanyId</th>
                                        <td>
                                            @if (item.IsActive.Equals(true))
                                            {
                                                <span class="badge bg-label-success">Aktiv</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-label-warning me-1">Deaktiv</span>
                                            }
                                        </td>
                                        <td>
                                            <img src="~/Documents/ProductImage/@item.Images.FirstOrDefault().ImageName" class="rounded-circle">
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                    <i class="bx bx-dots-vertical-rounded"></i>
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" asp-action="Details" asp-controller="Product" asp-route-id="@item.Id"><i class="bx bx-show"></i> Details</a>
                                                    <a class="dropdown-item" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                                    <a class="dropdown-item delete-btn" data-id="@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        @ViewBag.Info
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<script src="https://cdn.lordicon.com/ritcuqlt.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.8/sweetalert2.js" integrity="sha512-6OaQemSmGBesLcXnnqomD2dQdjQZADWvXdeVGWSOBUaJAy0UuGpQNQqmP63QBXtS6PW9xIJvLgHu5BZ6IYMwNg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.js" integrity="sha512-6DC1eE3AWg1bgitkoaRM1lhY98PxbMIbhgYCGV107aZlyzzvaWCW1nJW2vDuYQm06hXrW0As6OGKcIaAVWnHJw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    let deleteBtn = document.getElementsByClassName("delete-btn");
    [...deleteBtn].forEach(btnItem => {
        btnItem.addEventListener("click", function () {
            let productId = btnItem.getAttribute("data-id");
            Swal.fire({
                title: 'Məhsulu silmək istəyirsiniz?',
                text: "Diqqət bu məhsulu geri qaytarmaq olmayacaq!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Bəli, məhsulu sil!',
                cancelButtonText: "Xeyr"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "POST",
                        url: "/Product/Delete",
                        data: { id: productId },
                        success: async function (res) {
                            if (res.status) {
                                await Swal.fire(
                                    'Silindi!',
                                    'Məhsul müvəffəqiyyətlə silindi.',
                                    'success'
                                )
                                window.location.reload();
                            } else {
                                Swal.fire(
                                    'Xəta!',
                                    'Məhsul müvəffəqiyyətlə silinmədi!',
                                    'error'
                                )
                            }

                        }
                    });
                }

            });
        });
    })
</script>