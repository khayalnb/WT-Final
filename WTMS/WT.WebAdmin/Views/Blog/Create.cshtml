@model BlogDto
<style>
    .form {
        box-shadow: 0 2px 6px 0 rgba(67, 89, 113, 0.12);
        background-color: #fff;
        border: 0 solid #d9dee3;
        border-radius: 0.5rem;
        padding:24px;
    }
    textarea{
        height:150px;
    }
    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }
</style>
<div class="container-fluid flex-grow-1 container-p-y">
    <form method="post" enctype="multipart/form-data"> 
        <div class="form">
            <div class="row ">
                <div class="col-sm-6">
                    <div>
                        <label asp-for="Title" class="form-label">Başlıq</label>
                        <input asp-for="Title" class="form-control" type="text">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div>
                        <label asp-for="FormFile" class="form-label">Şəkil seç</label>
                        <input accept="image/*" asp-for="FormFile" class="form-control" type="file">
                        <span asp-validation-for="FormFile" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-sm-12 my-3">
                    <div>
                        <label asp-for="Text" class="form-label">Mətn</label>
                        <textarea asp-for="Text" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 mt-3">
                <button type="submit" class="btn btn-secondary me-3">Geri qayıt</button>
                <button type="submit" class="btn btn-primary ">Əlavə et</button>
            </div>
        </div>
    </form>
    
   
</div>