@model OfferCompany
<style>
    #uploadedAvatar {
        width: 800px;
        height: fit-content;
    }
    .active {
        background-color: #e8fadf !important;
        color: #71dd37 !important;
    }
    .deactive {
        background-color: #fff2d6 !important;
        color: #ffab00 !important;
    }
    .text-container {
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
        border-radius: 5px;
        padding: 1rem;
        margin-top:5px;
    }
</style>
<div class="container-fluid flex-grow-1 container-p-y">
    <div class="card mb-4">
        <h5 class="card-header">Kateqoriya</h5>
        <!-- Account -->
        <div class="card-body">
            <div class="d-flex  gap-4">
                <img src="~/Documents/OfferCompanyImage/@Model.ImageName" alt="user-avatar" class="d-block rounded" height="100" width="100" id="uploadedAvatar">
                <div class="button-wrapper">
                    <a asp-controller="OfferCompany" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary account-image-reset mb-4">
                        <i class="bx bx-reset d-block d-sm-none"></i>
                        <span class="d-none d-sm-block">Reset</span>
                    </a>
                    <p class="text-muted mb-0">@Model.ImageName</p>
                </div>
            </div>
        </div>
        <hr class="my-0">
        <div class="card-body">
            <div class="row">
                <div class="mb-3 col-md-12">
                    <label for="firstName" class="form-label">Başlıq</label>
                    <p>@Model.Text</p>
                </div>
                <div class="mb-3 col-md-6">
                    <label for="lastName" class="form-label">Status</label>
                    @{ string status = Model.IsActive == true ? "Aktiv" : "Deaktiv";}
                    <input class="@(Model.IsActive == true ? "active" : "deactive" ) form-control" disabled value="@status" />
                </div>
                <div class="mb-3 col-md-6">
                    <label for="firstName" class="form-label">Yaradılma tarixi</label>
                    <input class="form-control" type="text" value="@Model.Created_Date" disabled/>
                </div>
                <div class="mb-3 col-md-6">
                    <label for="firstName" class="form-label">Yaradılma tarixi</label>
                    <input class="form-control" type="text" value="@(Model.Updated_Date==null ? "Dəyişiklik edilmeyib" : Model.Created_Date)" disabled />
                </div>
                <div class="mb-3 col-md-6">
                    <label for="firstName" class="form-label">Status deaktiv tarixi</label>
                    <input class="form-control" type="text" value="@(Model.Deleted_Date==null ? "Dəyişiklik edilmeyib" : Model.Deleted_Date)" disabled />
                </div>
                <div class="mb-3 col-md-12">
                    <label>Mətn</label>
                    <p class="text-container">
                        @Model.Text
                    </p>
                </div>
            </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary me-2">Save changes</button>
                    <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                </div>
        </div>
        <!-- /Account -->
    </div>
</div>