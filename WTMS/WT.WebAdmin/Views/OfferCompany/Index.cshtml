@model List<OfferCompany>
<style>
    .dropdown-item:first-child {
        color: green;
    }

    .dropdown-item:nth-child(2) {
        color: dodgerblue;
    }

    .dropdown-item:last-child {
        color: red;
    }

    .dropdown-item {
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

        .dropdown-item i {
            margin-right: 5px;
        }

    .padding {
        margin: 1.5rem 1.5rem;
        font-weight: 100;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .padding img {
            margin-right: 5px;
        }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

    .rounded-circle {
        width: 50px;
        height: 50px;
        box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
    }
</style>
<div class="container-fluid flex-grow-1 container-p-y">
    <div class="card">
        <div class="d-flex justify-content-between align-items-center my-1">
            <h5 class="card-header">Kampaniyalar</h5>
            <a asp-controller="OfferCompany" asp-action="Create" class="btn btn-primary padding"><img src="~/Assets/img/plus-circle-dotted.svg" /> Əlavə et</a>
        </div>

        <div class="card-body">
            <div class="table-responsive text-nowrap">
                @if (Model is not null)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Başlıq</th>
                                <th>Yaradılma tarixi</th>
                                <th>Düzəliş tarixi</th>
                                <th>Status dəyişiklik tarixi</th>
                                <th>Status</th>
                                <th>Şəkil</th>
                                <th>Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    string updateDate = item.Updated_Date == null ? "Dəyişiklik edilməyib" : item?.Updated_Date?.ToString("MM/dd/yyyy H:mm");
                                    string deletedDate = item.Deleted_Date == null ? "Dəyişiklik edilməyib" : item?.Updated_Date?.ToString("MM/dd/yyyy H:mm");

                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Title</td>
                                        <td>@item.Created_Date?.ToString("MM/dd/yyyy H:mm")</td>
                                        <td><span class="@(updateDate == "Dəyişiklik edilməyib" ? "badge bg-label-success me-1" : "")">@updateDate</span></td>
                                        <td><span class="@(deletedDate == "Dəyişiklik edilməyib" ? "badge bg-label-success me-1" : "")">@deletedDate</span></td>
                                        <td>
                                            @if (item.IsActive.Equals(true))
                                            {
                                                <span class="badge bg-label-success">Aktiv</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-label-warning me-1">Deaktiv</span>
                                            }
                                        </td>
                                        <td>
                                            <img src="~/Documents/OfferCompanyImage/@item.ImageName" class="rounded-circle">
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                    <i class="bx bx-dots-vertical-rounded"></i>
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" asp-action="Details" asp-controller="OfferCompany" asp-route-id="@item.Id"><i class="bx bx-show"></i> Details</a>
                                                    <a class="dropdown-item" asp-action="Edit" asp-controller="OfferCompany" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                                    <a class="dropdown-item" asp-action="Delete" asp-controller="OfferCompany" asp-route-id="@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        @ViewBag.Info
                    </div>
                }

            </div>
        </div>
    </div>
</div>